<h1>All Flats</h1>

<div class="row">
  <% @flats.each do |flat| %>
    <div class="col-md-4">
      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title"><%= flat.name %></h5>
          <p class="card-text"><%= flat.address %></p>
          <p class="card-text"><i class="fas fa-euro-sign"></i> <%= flat.price_per_night %>/night</p>
          <p class="card-text"><i class="fas fa-user"></i> <%= flat.number_of_guests %> guests</p>
          <%= link_to 'Show', flat, class: 'btn btn-primary' %>
          <%= link_to 'Edit', edit_flat_path(flat), class: 'btn btn-secondary' %>
          <%= link_to 'Delete', flat, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= link_to 'New Flat', new_flat_path, class: 'btn btn-success' %>