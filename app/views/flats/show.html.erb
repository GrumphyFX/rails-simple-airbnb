<h1><%= @flat.name %></h1>

<div class="row">
  <div class="col-md-6">
    <% if @flat.picture_url.present? %>
      <%= image_tag @flat.picture_url, class: "img-fluid" %>
    <% end %>
  </div>
  <div class="col-md-6">
    <p><strong>Address:</strong> <%= @flat.address %></p>
    <p><strong>Description:</strong> <%= @flat.description %></p>
    <p><strong>Price per night:</strong> <%= number_to_currency(@flat.price_per_night) %></p>
    <p><strong>Number of guests:</strong> <%= @flat.number_of_guests %></p>
    <%= link_to 'Edit', edit_flat_path(@flat), class: 'btn btn-primary' %>
    <%= link_to 'Remove', @flat, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
    <%= link_to 'Go Back', flats_path, class: 'btn btn-outline-danger' %>
  </div>
</div>